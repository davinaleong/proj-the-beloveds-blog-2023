---
import MainAstroLayout from "./../layouts/main.layout.astro"
import HeroAstroComponent from "./../components/hero.component.astro"

const response = await fetch(`${import.meta.env.BLOG_API_URL}about`)
const data = await response.json()
const { page, latest } = data
---

<MainAstroLayout>
    <HeroAstroComponent page={page} sectionClassName="section-hero-about-us" containerClassName="container-hero"/>
</MainAstroLayout>
