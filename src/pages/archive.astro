---
import MainAstroLayout from "./../layouts/main.layout.astro"
import HeroAstroComponent from "./../components/hero.component.astro"

const response = await fetch(`${import.meta.env.BLOG_API_URL}archive`)
const data = await response.json()
const { page, latest, years } = data
---

<MainAstroLayout latest={latest} years={years}>
    <HeroAstroComponent page={page} sectionClassName="section-hero-archive" containerClassName="container-hero"/>
</MainAstroLayout>